<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">
            <!--comunidade == Capela -->
            <TextView
                android:id="@+id/nome_comunidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/google_new_font"
                android:text="Nome Comunidade"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/layout_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/endereco_icon"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/ic_outline_pin_drop_24px"
                    android:tint="@color/colorAccent" />

                <TextView
                    android:id="@+id/endereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Endereco"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_celebracao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/celebracao_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Celebração"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/celebracao_decricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descricao_card_op"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_batismo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="vertical"
                android:visibility="visible">

                <View
                    android:id="@+id/view_separator"
                    android:layout_width="328dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="#d2d2d2"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/batismo_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batismo"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/hora_batismo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/horario_icon"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:tint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/horario_batismo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Desc hora Batismo"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reuniao_batismo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/reuniao_icon"
                        android:layout_width="34dp"
                        android:layout_height="34dp"

                        android:layout_marginRight="12dp"
                        android:src="@drawable/ic_icons8_sala_de_reunioes_50"
                        android:tint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/reuniao_batismo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Desc reunicao batismo"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_separator_tv_button"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d2d2d2"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ver_festa_tv_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="FESTA PADROEIRO"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ver_hora_tv_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:text="Ver horários"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
